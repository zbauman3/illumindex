{
  "name": "illumindex-server",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "next build",
    "start": "next start",
    "lint": "npx next lint && npx prettier . --check",
    "lint:fix": "npx next lint --fix && npx prettier . --write",
    "types": "tsc --noEmit",
    "devMode:set": "npx tsx --env-file=.env.local ./src/scripts/updateEnv.ts dev-mode",
    "devMode:clear": "npx tsx --env-file=.env.local ./src/scripts/updateEnv.ts clear"
  },
  "dependencies": {
    "next": "15.1.11",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "redis": "^4.7.0",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "eslint": "^9",
    "eslint-config-next": "15.1.7",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-prettier": "^5.5.0",
    "prettier": "^3.6.0",
    "tsx": "^4.19.4",
    "typescript": "^5",
    "vercel": "^41.3.0"
  }
}
